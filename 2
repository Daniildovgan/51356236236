#include <iostream>
using namespace std;

int main() {
    const int size = 10; // Розмір масиву
    int array[size];

    // Введення елементів масиву
    cout << "Введіть 10 елементів масиву:\n";
    for (int i = 0; i < size; i++) {
        cout << "Елемент " << i + 1 << ": ";
        while (!(cin >> array[i])) {
            cout << "Некоректне значення. Будь ласка, введіть число для елемента " << i + 1 << ": ";
            cin.clear();
            cin.ignore(numeric_limits<streamsize>::max(), '\n');
        }
    }

    // Виведення масиву у зворотному порядку
    cout << "Масив у зворотному порядку:\n";
    for (int i = size - 1; i >= 0; i--) {
        cout << array[i] << " ";
    }
    cout << endl;

    return 0;
}

#include <iostream>
using namespace std;

int main() {
    const int months = 6;
    double profits[months];
    double totalProfit = 0.0;

    cout << "Введіть прибуток фірми за кожен місяць:\n";

    for (int i = 0; i < months; i++) {
        cout << "Прибуток за місяць " << i + 1 << ": ";
        while (!(cin >> profits[i]) || profits[i] < 0) {
            cout << "Некоректне значення. Будь ласка, введіть правильний прибуток за місяць " << i + 1 << ": ";
            cin.clear(); 
            cin.ignore(numeric_limits<streamsize>::max(), '\n'); 
        }
        totalProfit += profits[i];
    }

    cout << "Загальний прибуток фірми за 6 місяців: " << totalProfit << " грн.\n";

    return 0;
}
